{
	"compilerOptions": {
		"target": "es6",
		"lib": ["es2016", "es2015"],
		"types": ["@types/jasmine"],
		"module": "commonjs",
		"moduleResolution": "node",
		"esModuleInterop": true,
		"declaration": true,
		"sourceMap": false,
		"outDir": "./dist",
		"strict": true,
		"emitDecoratorMetadata": true,
		"experimentalDecorators" : true
	},
	"include": ["src/**/*"]
}