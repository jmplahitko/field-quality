{
	"compilerOptions": {
		"target": "es5",
		"lib": ["ESNext", "DOM"],
		"types": ["@types/jasmine", "@types/node"],
		"module": "commonjs",
		"moduleResolution": "node",
		"esModuleInterop": true,
		"declaration": true,
		"sourceMap": true,
		"outDir": "./dist",
		"strict": true,
		"emitDecoratorMetadata": true,
		"experimentalDecorators" : true,
		"downlevelIteration": true,
		"baseUrl": "./",
		"paths": {}
	},
	"include": ["src/**/*"]
}