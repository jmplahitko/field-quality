{
	"compilerOptions": {
		"target": "ES5",
		"lib": ["ESNext", "DOM"],
		"types": ["@types/jasmine"],
		"module": "commonjs",
		"moduleResolution": "node",
		"esModuleInterop": true,
		"declaration": true,
		"sourceMap": false,
		"outDir": "./dist",
		"strict": true,
		"emitDecoratorMetadata": true,
		"experimentalDecorators" : true,
		"downlevelIteration": true
	},
	"include": ["src/**/*"]
}